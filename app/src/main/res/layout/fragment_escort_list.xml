<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context=".view.fragment.EscortListFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_escort"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/sp_company_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_text_height">

            </Spinner>

            <Spinner
                android:id="@+id/sp_company_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_text_height">

            </Spinner>

            <Spinner
                android:id="@+id/sp_company_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_text_height">

            </Spinner>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_escort"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>



    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>